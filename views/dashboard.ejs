<h1 class="text-center">Welcome  <%- user_info[0].user_name%></h1>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #f0f4f9;
      min-height: 100vh;
    }
    .dashboard-title {
      text-align: center;
      font-weight: 700;
      font-size: 2rem;
      margin: 30px 0;
      color: #2c3e50;
    }
    .card {
      border: none;
      border-radius: 20px;
      padding: 20px;
      box-shadow: 0 6px 15px rgba(0,0,0,0.08);
      transition: transform 0.3s ease;
    }
    .card:hover {
      transform: translateY(-5px);
    }
    .pending {
      background: #fff6f2;
      border-left: 6px solid #ff7e5f;
    }
    .processing {
      background: #f2f9ff;
      border-left: 6px solid #4facfe;
    }
    .completed {
      background: #f5fff2;
      border-left: 6px solid #43e97b;
    }
    .card h5 {
      font-weight: 600;
      margin-bottom: 15px;
      color: #34495e;
    }
    .task-item {
      background: #fff;
      border: 1px solid #eee;
      border-radius: 8px;
      padding: 10px 12px;
      margin-bottom: 8px;
      font-size: 14px;
      font-weight: 500;
      color: #2c3e50;
    }
    .task-item:hover {
      background: #fafafa;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="dashboard-title">üìä User Dashboard</h2>
    <div class="row g-4">
      
      <!-- Pending Tasks -->
      <div class="col-md-4">
        <div class="card pending">
          <h5>üìå Pending Tasks</h5>
         
        </div>
      </div>

      <!-- Processing Tasks -->
      <div class="col-md-4">
        <div class="card processing">
          <h5>‚öôÔ∏è Processing Tasks</h5>
         
        </div>
      </div>

      <!-- Completed Tasks -->
      <div class="col-md-4">
        <div class="card completed">
          <h5>‚úÖ Completed Tasks</h5>
        
        </div>
      </div>

    </div>
  </div>
</body>
</html>


