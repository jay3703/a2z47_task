<!-- Light Sky Blue Gradient Login Page -->
<style>
  body {
    font-family: 'Segoe UI', Arial, sans-serif;
    margin: 0;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    /* üîπ Light SkyBlue Gradient Background */
    background: linear-gradient(135deg, #ccefff, #a3d8ff, #e6f7ff);
  }

  .login-container {
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 6px 18px rgba(0,0,0,0.15);
    padding: 40px 30px;
    width: 370px;
    text-align: center;
  }

  .login-title {
    margin-bottom: 25px;
    color: #0077b6;
    font-size: 2rem;
    font-weight: 700;
    letter-spacing: 1px;
  }

  .form-group {
    margin-bottom: 18px;
    text-align: left;
    position: relative;
  }

  label {
    display: block;
    margin-bottom: 6px;
    font-size: 14px;
    color: #333;
    font-weight: 500;
  }

  input {
    width: 100%;
    padding: 12px 40px 12px 12px;
    border: 1px solid #b3e0ff;
    border-radius: 8px;
    font-size: 15px;
    background: #f7fbff;
    transition: border-color 0.3s, box-shadow 0.3s;
  }

  input:focus {
    border-color: #3399ff;
    box-shadow: 0 0 6px rgba(51,153,255,0.4);
    outline: none;
    background: #fff;
  }

  /* üëÅ Password toggle */
  .toggle-password {
    position: absolute;
    right: 12px;
    top: 38px;
    cursor: pointer;
    font-size: 16px;
    color: #555;
  }

  .custom-btn {
    width: 100%;
    padding: 13px;
    background: linear-gradient(to right, #66c2ff, #33adff, #80d4ff);
    border: none;
    border-radius: 8px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    margin-top: 10px;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .custom-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(0, 119, 182, 0.3);
  }

  .back-link {
    margin-top: 18px;
    display: inline-block;
    color: #0077b6;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>

<div class="login-container">
  <div class="login-title">Login</div>
  <form action="/login_process" method="post" autocomplete="off">
    <div class="form-group">
      <label for="user_mobile">User Mobile</label>
      <input type="number" id="user_mobile" name="user_mobile" required autocomplete="username">
    </div>

    <div class="form-group">
      <label for="user_password">Password</label>
      <input type="password" id="user_password" name="user_password" required autocomplete="current-password">
      <span class="toggle-password" onclick="togglePassword()">üëÅ</span>
    </div>

    <button type="submit" class="custom-btn">Login</button>
  </form>
  <a href="/" class="back-link">‚Üê Back to Home</a>
</div>

<script>
  function togglePassword() {
    const passwordInput = document.getElementById('user_password');
    const toggleBtn = document.querySelector('.toggle-password');
    if (passwordInput.type === "password") {
      passwordInput.type = "text";
      toggleBtn.textContent = "üôà";
    } else {
      passwordInput.type = "password";
      toggleBtn.textContent = "üëÅ";
    }
  }
</script>
