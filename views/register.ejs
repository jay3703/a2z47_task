<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Registration</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #fff0f5; /* ‡§π‡§≤‡§ï‡§æ light pink background */
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .container {
      background: #ffe6f2; /* box ‡§π‡§≤‡§ï‡§æ pink */
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      padding: 40px 30px;
      width: 400px;
      text-align: center;
    }

    h2 {
      margin-bottom: 20px;
      color: #cc6699;
      font-size: 26px;
      font-weight: bold;
    }

    .form-group {
      margin-bottom: 18px;
      text-align: left;
      position: relative;
    }

    label {
      display: block;
      margin-bottom: 6px;
      font-size: 14px;
      color: #444;
      font-weight: 500;
    }

    input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 14px;
      background: #fff;
      transition: 0.3s;
    }

    input:focus {
      border-color: #ff99cc;
      box-shadow: 0 0 5px rgba(255,153,204,0.3);
      outline: none;
    }

    /* eye icon */
    .toggle-password {
      position: absolute;
      right: 12px;
      top: 36px;
      cursor: pointer;
      font-size: 16px;
      color: #888;
    }

    .btn {
      width: 100%;
      padding: 12px;
      background: linear-gradient(to right, #ffb3d9, #ff99cc);
      border: none;
      border-radius: 8px;
      color: white;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn:hover {
      opacity: 0.9;
      transform: translateY(-1px);
    }

    .back-link {
      margin-top: 15px;
      display: inline-block;
      color: #cc6699;
      text-decoration: none;
      font-size: 14px;
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Create Account</h2>
    <form action="/save_user" method="post">
      <div class="form-group">
        <label>First Name</label>
        <input type="text" name="first_name" placeholder="Enter your first name" required>
      </div>

      <div class="form-group">
        <label>Last Name</label>
        <input type="text" name="last_name" placeholder="Enter your last name" required>
      </div>

      <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" placeholder="Enter your email" required>
      </div>

      <div class="form-group">
        <label>Mobile</label>
        <input type="number" name="user_mobile" placeholder="Enter your mobile number" required>
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" id="password" name="user_password" placeholder="Enter your password" required>
        <span class="toggle-password" onclick="togglePassword()">üëÅ</span>
      </div>

      <button type="submit" class="btn">Register</button>
    </form>

    <a href="/" class="back-link">‚Üê Back to Home</a>
  </div>

  <script>
    function togglePassword() {
      const passwordInput = document.getElementById('password');
      const toggleBtn = document.querySelector('.toggle-password');
      if (passwordInput.type === "password") {
        passwordInput.type = "text";
        toggleBtn.textContent = "üôà";
      } else {
        passwordInput.type = "password";
        toggleBtn.textContent = "üëÅ";
      }
    }
  </script>
</body>
</html>
